<div class='card single-post-by-tag'   style="min-width:300px;">
  <div class='card-image'>
    <figure class='image is-4by3'>
      <img src='{{thisPost.post_image}}' alt='{{thisPost.post_title}}' />
    </figure>
  </div>
  <div class='card-content'>

    <div class='media'>
      <div class='media-left'>
        <figure class='image is-48x48'>
          <img
            class="is-rounded"
            src='{{userImage}}'
            alt='{{userName}}'
          />
        </figure>
      </div>
      <div class='media-content'>
        <p class='title is-6 m-1'>@{{userName}}</p>
        <p class='post_time content is-small m-1'>{{post_time thisPost.updatedAt}}</p>
      </div>
    </div>

    <div class='content otherTagsArea'>
      {{#each otherTags}}
      {{> singleTag2}}
      {{/each}}
    </div>

    

  </div>
</div>